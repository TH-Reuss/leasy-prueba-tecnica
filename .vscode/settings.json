{
  // formato al guardar
  "editor.formatOnSave": true,

  // Prettier como formateador para HTML
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // …y también para CSS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ruta a tu config de Prettier
  "prettier.configPath": ".prettierrc"
}
