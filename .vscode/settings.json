{
  "editor.formatOnSave": true,

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.html": "django-html"
  },
  // …y también para CSS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ruta a tu config de Prettier
  "prettier.configPath": ".prettierrc"
}
